{
  "manifest_version": 3,
  "name": "YouTube Downloader",
  "version": "1.1",
  "description": "Download YouTube videos and convert them to MP3",
  "permissions": [
    "scripting",
    "contextMenus",
    "activeTab",
    "https://*.savefrom.net/",
    "https://*.x2download.app/"
  ],
  "host_permissions": [
    "https://www.youtube.com/*"
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  }
}
