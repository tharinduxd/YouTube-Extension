{
  "manifest_version": 3,
  "name": "Video Downloader",
  "version": "1.2",
  "description": "Download videos from YouTube, Facebook, Instagram, and Twitter",
  "permissions": [
    "scripting",
    "contextMenus",
    "activeTab",
    "https://*.savefrom.net/*",
    "https://www.youtube.com/*",
    "https://www.facebook.com/*",
    "https://www.instagram.com/*",
    "https://twitter.com/*"
  ],
  
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  }
}
